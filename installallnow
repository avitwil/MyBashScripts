#!/bin/bash

echo "installing packeges by Avi Twill . . ."
sleep 3
echo 'installing "newuser" command ...'
sudo cp newuser /usr/bin/newuser
sudo chmod 700 /usr/bin/newuser
sudo chown root /usr/bin/newuser
sleep 2
echo 'installing "stc" command ...'
sudo cp scripttocommand.sh /usr/bin/stc
sudo chmod 700 /usr/bin/stc
sudo chown root /usr/bin/stc
sleep 2
echo 'installing "updatemykali" command ...'
sudo cp updatemykali /usr/bin/updatemykali
sudo chmod 700 /usr/bin/updatemykali
sudo chown root /usr/bin/updatemykali
sleep 2
echo " installation complete"
sleep 1
echo "--------------------------------------------------------------------------------------------------------"
echo " newuser -- create new user Just better "
echo " stc [script file] [command name] [sudo/nothing] -- take a scripte file and turn it in to a command "
echo " updatemykali -- doing updates and upgrades automaticly , no inputs needed"
echo "--------------------------------------------------------------------------------------------------------"
sleep 1
echo " Enjoy"

